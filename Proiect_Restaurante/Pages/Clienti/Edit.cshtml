@page
@model Proiect_Restaurante.Pages.Clienti.EditModel

@{
    ViewData["Title"] = "Edit";
}


<h4>Client</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Client.ID" />
            <div class="form-group">
                <label asp-for="Client.Prenume" class="control-label"></label>
                <input asp-for="Client.Prenume" class="form-control" />
                <span asp-validation-for="Client.Prenume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client.NumeFamilie" class="control-label"></label>
                <input asp-for="Client.NumeFamilie" class="form-control" />
                <span asp-validation-for="Client.NumeFamilie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client.Email" class="control-label"></label>
                <input asp-for="Client.Email" readonly class="form-control" />
                <span asp-validation-for="Client.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client.NrTelefon" class="control-label"></label>
                <input asp-for="Client.NrTelefon" class="form-control" />
                <span asp-validation-for="Client.NrTelefon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
